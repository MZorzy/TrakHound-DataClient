<?xml version="1.0" encoding="utf-8"?>
<DataClient xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  
  <Devices>
    <Device deviceId="0307f8be-5be9-4c14-85a6-8a2a9c9223db" address="agent.mtconnect.org" port="80" deviceName="VMC-3Axis" interval="500"/>
  </Devices>
  
  <DataServers>
    
    <DataServer hostname="localhost">
      <DataGroups>
        <DataGroup name="monitor" captureMode="ARCHIVE">
          <Allow />
          <Deny>
            <Filter>BLOCK</Filter>
            <Filter>LINE</Filter>
            <Filter>BLOCK</Filter>
            <Filter>POSITION</Filter>
            <Filter>PATH_FEEDRATE</Filter>
            <Filter>PATH_POSITION</Filter>
            <Filter>ROTARY_VELOCITY</Filter>
          </Deny>
          <Include>
            <DataGroup>snapshot</DataGroup>
          </Include>
        </DataGroup>
        <DataGroup name="snapshot" captureMode="INCLUDE">
          <Allow>
            <Filter>*</Filter>
          </Allow>
          <Deny />
          <Include />
        </DataGroup>
        <DataGroup name="all" captureMode="CURRENT">
          <Allow>
            <Filter>*</Filter>
          </Allow>
          <Deny />
          <Include />
        </DataGroup>
      </DataGroups>
      <Buffer path="Buffers"/>
    </DataServer>

  </DataServers>
</DataClient>